@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null; 
    var title = Model.Value("title");
    var body = Model.Value("body");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            padding: 40px;
            line-height: 1.6;
        }

        article {
            max-width: 800px;
            margin: auto;
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        }

        h1 {
            font-size: 2.5rem;
            color: #222;
            margin-bottom: 20px;
        }

        div {
            font-size: 1.1rem;
        }

        div p {
            margin-bottom: 1em;
        }

        a {
            color: #007acc;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

<article>
    <h1>@title</h1>
    <div>
        @Html.Raw(body)
    </div>
</article>

</body>
</html>
