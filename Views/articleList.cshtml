@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var articles = Model.Children().Where(x => x.ContentType.Alias == "articlePost");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>All Articles</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 40px;
            background-color: #f5f5f5;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        ul {
            list-style: none;
            padding: 0;
            max-width: 800px;
            margin: 0 auto;
        }

        li {
            background: #fff;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-top: 0;
        }

        a {
            display: inline-block;
            margin-top: 10px;
            color: #007acc;
            text-decoration: none;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>All Articles</h1>

    <ul>
    @foreach (var article in articles)
    {
        <li>
            <h2>@article.Value("title")</h2>
            <a href="@article.Url()">Read more</a>
        </li>
    }
    </ul>
</body>
</html>
